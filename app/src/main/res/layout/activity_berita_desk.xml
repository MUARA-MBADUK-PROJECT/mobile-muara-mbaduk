<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activity.BeritaDeskActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_beritaDesk_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/backgroundAppBar"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:popupTheme="@style/Theme.Design.Light"
        app:title="News" />
    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@id/app_beritaDesk_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/newsDesk_title_tv"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title title title title title title title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/black"></TextView>
            <ImageView
                android:id="@+id/newsDesk_gambar_iv"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:src="@drawable/banner_pembelian_tiket"
                app:layout_constraintTop_toBottomOf="@+id/newsDesk_title_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                ></ImageView>
            <TextView
                android:id="@+id/news_deskription_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="deskription deskription deskription deskription deskription deskriptiondeskription deskription deskription"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/newsDesk_gambar_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                ></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>