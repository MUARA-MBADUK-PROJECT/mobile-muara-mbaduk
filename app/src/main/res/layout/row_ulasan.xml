<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:id="@+id/ulasan_profil_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/profile_homepg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/ulasan_nama_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Ester"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ulasan_profil_iv"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:id="@+id/ulasan_rating_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/ulasan_desk_tv"
        app:layout_constraintStart_toEndOf="@id/ulasan_profil_iv"
        app:layout_constraintTop_toBottomOf="@id/ulasan_nama_tv"
         >
        <TextView
            android:textColor="@color/black"
            android:text="Rating: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/rating_tv"
            android:textColor="@color/black"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textColor="@color/black"
            android:text="/5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/ulasan_desk_tv"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ini adalah deskripsi ulasan user"
        app:layout_constraintTop_toBottomOf="@id/ulasan_profil_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>